{
  "name": "@repo/ui",
  "version": "0.0.0",
  "private": true,
  "sideEffects": [
    "**/*.css"
  ],
  "files": [
    "dist"
  ],
  "exports": {
    "./styles.css": "./dist/styles.css",
    "./theme.css": "./src/styles/theme.css",
    ".": "./src/components/index.ts"
  },
  "scripts": {
    "build": "tailwindcss -i ./src/styles/styles.css -o ./dist/styles.css",
    "dev": "tailwindcss -i ./src/styles/styles.css -o ./dist/styles.css --watch",
    "type-check": "tsc --noEmit",
    "lint": "biome check .",
    "lint:fix": "biome check . --write",
    "lint:ci": "biome ci --reporter=github",
    "lint:summary": "biome check --reporter=summary"
  },
  "devDependencies": {
    "@repo/typescript-config": "workspace:*",
    "@tailwindcss/cli": "^4.0.11"
  },
  "dependencies": {
    "@radix-ui/react-dialog": "^1.1.14",
    "@radix-ui/react-slot": "^1.2.3",
    "@repo/utils": "workspace:*"
  }
}
